@code {
    private string GetActiveClass(string href)
    {
        var currentPath = Navigation.ToBaseRelativePath(Navigation.Uri);

        if (string.IsNullOrEmpty(currentPath) && href == "/home")
            return "active";

        if (currentPath.StartsWith(href.TrimStart('/'), StringComparison.OrdinalIgnoreCase))
            return "active";

        return "";
    }
}