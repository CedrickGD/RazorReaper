<style>
    .developer-avatar {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, var(--text-primary), #cccccc);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 25px rgba(255, 255, 255, 0.2);
    }

    .tech-section {
        background: var(--background-dark);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 1.5rem;
    }

    .tech-badge {
        background: var(--background-hover);
        color: var(--text-primary);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

        .tech-badge:hover {
            background: var(--background-card);
            border-color: var(--text-primary);
            transform: translateY(-1px);
        }

    .support-section {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 12px;
        padding: 1.5rem;
    }

    .support-tag {
        background: rgba(239, 68, 68, 0.2);
        color: var(--accent-red);
        padding: 0.25rem 0.75rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        border: 1px solid rgba(239, 68, 68, 0.3);
    }

    .social-button {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
        background: var(--background-dark);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-align: left;
        width: 100%;
        position: relative;
        overflow: hidden;
        color: var(--text-primary);
    }

        .social-button::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: left 0.5s ease;
        }

        .social-button:hover::before {
            left: 100%;
        }

        .social-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }

        .social-button.discord {
            border-color: #5865f2;
            background: linear-gradient(135deg, rgba(88, 101, 242, 0.1), rgba(88, 101, 242, 0.05));
            color: #5865f2;
        }

            .social-button.discord:hover {
                background: linear-gradient(135deg, rgba(88, 101, 242, 0.2), rgba(88, 101, 242, 0.1));
                box-shadow: 0 8px 25px rgba(88, 101, 242, 0.4);
                border-color: #7289da;
            }

        .social-button.youtube {
            border-color: #ff0000;
            background: linear-gradient(135deg, rgba(255, 0, 0, 0.1), rgba(255, 0, 0, 0.05));
            color: #ff0000;
        }

            .social-button.youtube:hover {
                background: linear-gradient(135deg, rgba(255, 0, 0, 0.2), rgba(255, 0, 0, 0.1));
                box-shadow: 0 8px 25px rgba(255, 0, 0, 0.4);
                border-color: #ff4444;
            }

        .social-button.telegram {
            border-color: #0088cc;
            background: linear-gradient(135deg, rgba(0, 136, 204, 0.1), rgba(0, 136, 204, 0.05));
            color: #0088cc;
        }

            .social-button.telegram:hover {
                background: linear-gradient(135deg, rgba(0, 136, 204, 0.2), rgba(0, 136, 204, 0.1));
                box-shadow: 0 8px 25px rgba(0, 136, 204, 0.4);
                border-color: #00a8ff;
            }

        .social-button.github {
            border-color: #6e40c9;
            background: linear-gradient(135deg, rgba(110, 64, 201, 0.1), rgba(110, 64, 201, 0.05));
            color: #6e40c9;
        }

            .social-button.github:hover {
                background: linear-gradient(135deg, rgba(110, 64, 201, 0.2), rgba(110, 64, 201, 0.1));
                box-shadow: 0 8px 25px rgba(110, 64, 201, 0.4);
                border-color: #8b5cf6;
            }

        .social-button.steam {
            border-color: #66c0f4;
            background: linear-gradient(135deg, rgba(102, 192, 244, 0.1), rgba(102, 192, 244, 0.05));
            color: #66c0f4;
        }

            .social-button.steam:hover {
                background: linear-gradient(135deg, rgba(102, 192, 244, 0.2), rgba(102, 192, 244, 0.1));
                box-shadow: 0 8px 25px rgba(102, 192, 244, 0.4);
                border-color: #74d3f4;
            }

    .social-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .social-icon svg {
            width: 24px;
            height: 24px;
        }
</style>

