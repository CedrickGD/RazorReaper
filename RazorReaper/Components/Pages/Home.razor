@page "/"
@page "/home"
@using RazorReaper.Components.Shared

<div class="app-container">
    <RazorReaper.Components.Shared.SharedNavbar/>

    <main class="main-content">
        <header class="page-header">
            <h1 class="page-title">RazorReaper Dashboard ( Dummy Content )</h1>
            <p class="page-subtitle">ARK: Survival Evolved Configuration & Server Management Tool</p>
        </header>

        <div class="content-card">
            <div style="display: flex; align-items: center; gap: 0.75rem; margin-bottom: 1rem;">
                <div class="status-indicator @(systemStatus.IsHealthy ? "healthy" : "warning")"></div>
                <h2 class="mb-0">System Status</h2>
            </div>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 1rem;">
                <div class="stat-card">
                    <div class="stat-value text-green">✓</div>
                    <div class="stat-label">ARK Installation</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value text-white">3</div>
                    <div class="stat-label">Config Files Found</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value text-green">2</div>
                    <div class="stat-label">Active Presets</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value text-green">3</div>
                    <div class="stat-label">Days Since Backup</div>
                </div>
            </div>
        </div>

        <div class="content-card">
            <h2 class="mb-3">Quick Actions</h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 1rem;">

                <a href="/server" class="action-card server">
                    <div class="action-icon">
                        <svg fill="currentColor" viewBox="0 0 20 20" width="24" height="24">
                            <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h12a2 2 0 012 2v2a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm14 1a1 1 0 11-2 0 1 1 0 012 0zM2 13a2 2 0 012-2h12a2 2 0 012 2v2a2 2 0 01-2 2H4a2 2 0 01-2-2v-2zm14 1a1 1 0 11-2 0 1 1 0 012 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <h3>Connect to Server</h3>
                    <p>Quick connect to ARK servers via Battle Matrix connection method</p>
                    <div class="action-button">Connect Now</div>
                </a>

                <a href="/ini-changer" class="action-card config">
                    <div class="action-icon">
                        <svg fill="currentColor" viewBox="0 0 20 20" width="24" height="24">
                            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <h3>BaseDeviceProfiles Editor</h3>
                    <p>Load, modify, and apply optimized configuration presets</p>
                    <div class="action-button">Edit Configs</div>
                </a>

                <a href="/game" class="action-card game">
                    <div class="action-icon">
                        <svg fill="currentColor" viewBox="0 0 20 20" width="24" height="24">
                            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <h3>Game Management</h3>
                    <p>Manage game settings, backups, and advanced configurations</p>
                    <div class="action-button">Manage Game</div>
                </a>

            </div>
        </div>

        <div class="content-card">
            <h2 class="mb-3">Available Configuration Presets</h2>

            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1rem;">
                <div class="preset-card">
                    <h4 class="preset-name">Bloodstalker</h4>
                    <p class="preset-description">Optimized for Bloodstalker taming and web-slinging gameplay</p>
                    <div class="preset-tags">
                        <span class="tag">Visibility</span>
                        <span class="tag">Performance</span>
                    </div>
                </div>

                <div class="preset-card">
                    <h4 class="preset-name">Gen2 Farming</h4>
                    <p class="preset-description">Specialized settings for Genesis Part 2 resource farming</p>
                    <div class="preset-tags">
                        <span class="tag">Farming</span>
                        <span class="tag">Genesis</span>
                    </div>
                </div>

                <div class="preset-card">
                    <h4 class="preset-name">Ultra Minimal FPS</h4>
                    <p class="preset-description">Maximum FPS with minimal visual effects for competitive play</p>
                    <div class="preset-tags">
                        <span class="tag">Performance</span>
                        <span class="tag">Competitive</span>
                    </div>
                </div>

                <div class="preset-card">
                    <h4 class="preset-name">Hard & Black</h4>
                    <p class="preset-description">Dark theme optimization for better visibility in caves</p>
                    <div class="preset-tags">
                        <span class="tag">Visibility</span>
                        <span class="tag">Dark</span>
                    </div>
                </div>
            </div>

            <div style="margin-top: 1.5rem;">
                <a href="/ini-changer" class="btn btn-primary">View All Presets (10 Available)</a>
            </div>
        </div>

        <div class="content-card glow-effect">
            <h3 class="mb-3 text-green">Recent Activity</h3>
            <div class="activity-feed">
                @foreach (var activity in recentActivities)
                {
                    <div class="activity-item @activity.Type">
                        <div class="activity-icon">
                            @if (activity.Type == "success")
                            {
                                <svg fill="currentColor" viewBox="0 0 20 20" width="16" height="16">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            }
                            else if (activity.Type == "warning")
                            {
                                <svg fill="currentColor" viewBox="0 0 20 20" width="16" height="16">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                </svg>
                            }
                            else
                            {
                                <svg fill="currentColor" viewBox="0 0 20 20" width="16" height="16">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                </svg>
                            }
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">@activity.Title</div>
                            <div class="activity-time">@activity.TimeAgo</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="content-card">
            <h3 class="mb-3">System Paths</h3>
            <div class="path-info">
                <div class="path-item">
                    <label>ARK Installation:</label>
                    <span class="path-value">C:\Program Files (x86)\Steam\steamapps\common\ARK</span>
                    <button class="btn-icon text-green">
                        <svg fill="currentColor" viewBox="0 0 20 20" width="16" height="16">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
                <div class="path-item">
                    <label>Config Directory:</label>
                    <span class="path-value">C:\Users\Username\AppData\Local\ARK\Saved\Config\WindowsNoEditor</span>
                    <button class="btn-icon text-white">
                        <svg fill="currentColor" viewBox="0 0 20 20" width="16" height="16">
                            <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>

<style>
    .status-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        flex-shrink: 0;
    }

        .status-indicator.healthy {
            background-color: var(--accent-green);
            box-shadow: 0 0 8px rgba(16, 185, 129, 0.5);
        }

        .status-indicator.warning {
            background-color: #f59e0b;
            box-shadow: 0 0 8px rgba(245, 158, 11, 0.5);
        }

    .stat-card {
        text-align: center;
        padding: 1rem;
        background: var(--background-dark);
        border-radius: 8px;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            background: var(--background-hover);
            border-color: var(--text-primary);
            transform: translateY(-2px);
        }

    .stat-value {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 0.25rem;
    }

    .stat-label {
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .action-card {
        padding: 1.5rem;
        background: var(--background-dark);
        border-radius: 12px;
        border: 1px solid var(--border-color);
        text-align: center;
        transition: all 0.3s ease;
        text-decoration: none;
        color: inherit;
        display: block;
    }

        .action-card:hover {
            background: var(--background-hover);
            border-color: var(--text-primary);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
            text-decoration: none;
            color: inherit;
        }

        .action-card.server:hover {
            border-color: var(--accent-blue);
            box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
        }

        .action-card.config:hover {
            border-color: var(--accent-green);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
        }

        .action-card.game:hover {
            border-color: #8b5cf6;
            box-shadow: 0 8px 25px rgba(139, 92, 246, 0.3);
        }

    .action-icon {
        color: var(--text-primary);
        margin-bottom: 1rem;
        display: flex;
        justify-content: center;
    }

    .action-card h3 {
        margin-bottom: 0.5rem;
        color: var(--text-primary);
    }

    .action-card p {
        color: var(--text-secondary);
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .action-button {
        background: var(--background-hover);
        color: var(--text-primary);
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85rem;
        border: 1px solid var(--border-color);
        display: inline-block;
        transition: all 0.3s ease;
    }

    .action-card:hover .action-button {
        background: var(--text-primary);
        color: var(--background-dark);
    }

    .preset-card {
        padding: 1rem;
        background: var(--background-dark);
        border-radius: 8px;
        border: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

        .preset-card:hover {
            background: var(--background-hover);
            border-color: var(--accent-green);
            transform: translateY(-2px);
        }

    .preset-name {
        color: var(--accent-green);
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .preset-description {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-bottom: 0.75rem;
    }

    .preset-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .tag {
        background: var(--background-hover);
        color: var(--text-primary);
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
        border: 1px solid var(--border-color);
    }

    .activity-feed {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .activity-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        border-radius: 8px;
        border-left: 3px solid;
        background: var(--background-dark);
    }

        .activity-item.success {
            border-left-color: var(--accent-green);
        }

        .activity-item.warning {
            border-left-color: #f59e0b;
        }

        .activity-item.info {
            border-left-color: var(--text-primary);
        }

    .activity-icon {
        color: inherit;
        flex-shrink: 0;
    }

    .activity-content {
        flex: 1;
    }

    .activity-title {
        font-weight: 600;
        margin-bottom: 0.25rem;
        color: var(--text-primary);
    }

    .activity-time {
        color: var(--text-secondary);
        font-size: 0.85rem;
    }

    .path-info {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .path-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem;
        background: var(--background-dark);
        border-radius: 6px;
        border: 1px solid var(--border-color);
    }

        .path-item label {
            font-weight: 600;
            color: var(--text-primary);
            min-width: 150px;
        }

    .path-value {
        flex: 1;
        font-family: 'Courier New', monospace;
        font-size: 0.9rem;
        color: var(--text-secondary);
        word-break: break-all;
    }

    .btn-icon {
        background: none;
        border: none;
        padding: 0.25rem;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.2s ease;
        color: var(--text-secondary);
    }

        .btn-icon:hover {
            background: var(--background-hover);
        }

    .text-warning {
        color: #f59e0b;
    }
</style>

@code {
    private SystemStatus systemStatus = new SystemStatus { IsHealthy = true };

    private List<ActivityItem> recentActivities = new List<ActivityItem>
    {
        new ActivityItem { Title = "RazorReaper dashboard loaded", TimeAgo = "Just now", Type = "success" },
        new ActivityItem { Title = "System status checked", TimeAgo = "1 minute ago", Type = "info" },
        new ActivityItem { Title = "Configuration presets loaded", TimeAgo = "2 minutes ago", Type = "success" },
        new ActivityItem { Title = "ARK installation verified", TimeAgo = "5 minutes ago", Type = "success" }
    };

    public class SystemStatus
    {
        public bool IsHealthy { get; set; }
    }

    public class ActivityItem
    {
        public string Title { get; set; } = "";
        public string TimeAgo { get; set; } = "";
        public string Type { get; set; } = "info";
    }
}