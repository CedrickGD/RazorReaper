@page "/"
@page "/home"
@using RazorReaper.Components.Shared

<div class="app-container">
    <RazorReaper.Components.Shared.SharedNavbar/>

    <main class="main-content">
        <header class="page-header">
            <h1 class="page-title">RazorReaper Dashboard</h1>
            <p class="page-subtitle">ARK: Survival Evolved Configuration & Server Management Tool</p>
        </header>

        <div class="content-card">
            <div class="system-status-header">
                <div class="status-indicator @(systemStatus.IsHealthy ? "healthy" : "warning")"></div>
                <h2>System Status</h2>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon success">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">Ready</div>
                        <div class="stat-label">ARK Installation</div>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon primary">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">3</div>
                        <div class="stat-label">Config Files Found</div>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon success">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">2</div>
                        <div class="stat-label">Active Presets</div>
                    </div>
                </div>

                <div class="stat-card">
                    <div class="stat-icon warning">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="stat-content">
                        <div class="stat-value">3</div>
                        <div class="stat-label">Days Since Backup</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="content-card">
            <h2>Quick Actions</h2>
            <div class="actions-grid">

                <a href="/server" class="action-card">
                    <div class="action-icon server">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M2 5a2 2 0 012-2h12a2 2 0 012 2v2a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm14 1a1 1 0 11-2 0 1 1 0 012 0zM2 13a2 2 0 012-2h12a2 2 0 012 2v2a2 2 0 01-2 2H4a2 2 0 01-2-2v-2zm14 1a1 1 0 11-2 0 1 1 0 012 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="action-content">
                        <h3>Connect to Server</h3>
                        <p>Quick connect to ARK servers via Battle Matrix connection method</p>
                        <div class="action-button">Connect Now</div>
                    </div>
                </a>

                <a href="/ini-changer" class="action-card">
                    <div class="action-icon config">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="action-content">
                        <h3>BaseDeviceProfiles Editor</h3>
                        <p>Load, modify, and apply optimized configuration presets</p>
                        <div class="action-button">Edit Configs</div>
                    </div>
                </a>

                <a href="/game" class="action-card">
                    <div class="action-icon game">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div class="action-content">
                        <h3>Game Management</h3>
                        <p>Manage game settings, backups, and advanced configurations</p>
                        <div class="action-button">Manage Game</div>
                    </div>
                </a>

            </div>
        </div>

        <div class="content-card">
            <h2>Available Configuration Presets</h2>

            <div class="presets-grid">
                <div class="preset-card">
                    <div class="preset-header">
                        <h4 class="preset-name">Bloodstalker</h4>
                        <div class="preset-status active"></div>
                    </div>
                    <p class="preset-description">Optimized for Bloodstalker taming and web-slinging gameplay</p>
                    <div class="preset-tags">
                        <span class="tag">Visibility</span>
                        <span class="tag">Performance</span>
                    </div>
                </div>

                <div class="preset-card">
                    <div class="preset-header">
                        <h4 class="preset-name">Gen2 Farming</h4>
                        <div class="preset-status"></div>
                    </div>
                    <p class="preset-description">Specialized settings for Genesis Part 2 resource farming</p>
                    <div class="preset-tags">
                        <span class="tag">Farming</span>
                        <span class="tag">Genesis</span>
                    </div>
                </div>

                <div class="preset-card">
                    <div class="preset-header">
                        <h4 class="preset-name">Ultra Minimal FPS</h4>
                        <div class="preset-status active"></div>
                    </div>
                    <p class="preset-description">Maximum FPS with minimal visual effects for competitive play</p>
                    <div class="preset-tags">
                        <span class="tag">Performance</span>
                        <span class="tag">Competitive</span>
                    </div>
                </div>

                <div class="preset-card">
                    <div class="preset-header">
                        <h4 class="preset-name">Hard & Black</h4>
                        <div class="preset-status"></div>
                    </div>
                    <p class="preset-description">Dark theme optimization for better visibility in caves</p>
                    <div class="preset-tags">
                        <span class="tag">Visibility</span>
                        <span class="tag">Dark</span>
                    </div>
                </div>
            </div>

            <div class="presets-footer">
                <a href="/ini-changer" class="btn btn-primary">View All Presets (10 Available)</a>
            </div>
        </div>

        <div class="content-card activity-card">
            <h3 class="activity-title">Recent Activity</h3>
            <div class="activity-feed">
                @foreach (var activity in recentActivities)
                {
                    <div class="activity-item @activity.Type">
                        <div class="activity-icon">
                            @if (activity.Type == "success")
                            {
                                <svg fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                            }
                            else if (activity.Type == "warning")
                            {
                                <svg fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                </svg>
                            }
                            else
                            {
                                <svg fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                                </svg>
                            }
                        </div>
                        <div class="activity-content">
                            <div class="activity-title">@activity.Title</div>
                            <div class="activity-time">@activity.TimeAgo</div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="content-card">
            <h3>System Paths</h3>
            <div class="paths-list">
                <div class="path-item">
                    <div class="path-label">ARK Installation</div>
                    <div class="path-value">C:\Program Files (x86)\Steam\steamapps\common\ARK</div>
                    <div class="path-status success">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
                <div class="path-item">
                    <div class="path-label">Config Directory</div>
                    <div class="path-value">C:\Users\Username\AppData\Local\ARK\Saved\Config\WindowsNoEditor</div>
                    <div class="path-status success">
                        <svg fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M2 6a2 2 0 012-2h5l2 2h5a2 2 0 012 2v6a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd" />
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@code {
    private SystemStatus systemStatus = new SystemStatus { IsHealthy = true };

    private List<ActivityItem> recentActivities = new List<ActivityItem>
    {
        new ActivityItem { Title = "RazorReaper dashboard loaded", TimeAgo = "Just now", Type = "success" },
        new ActivityItem { Title = "System status checked", TimeAgo = "1 minute ago", Type = "info" },
        new ActivityItem { Title = "Configuration presets loaded", TimeAgo = "2 minutes ago", Type = "success" },
        new ActivityItem { Title = "ARK installation verified", TimeAgo = "5 minutes ago", Type = "success" }
    };

    public class SystemStatus
    {
        public bool IsHealthy { get; set; }
    }

    public class ActivityItem
    {
        public string Title { get; set; } = "";
        public string TimeAgo { get; set; } = "";
        public string Type { get; set; } = "info";
    }
}